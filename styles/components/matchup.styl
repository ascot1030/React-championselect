@import '../base/constants'

.cs-matchup-header
  position relative

.cs-matchup-search
  margin-top 1.5rem

.cs-matchup-versus
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -51%)
  z-index 999

  text-align center
  font-size 0.875rem

.cs-matchup-versus-text
  color: lighten(Colors.MONSOON, 75%)
  margin-bottom 0.5rem
  font-weight bold
  text-transform uppercase

// .cs-matchup-exchange

.cs-matchup-profile
  text-align center

.cs-matchup-profile-icon
  border-radius 50%
  margin-bottom 0.375rem
  width 4rem
  height @width
  background-position center
  background-size 120%

  @media (min-width: Breakpoints.MD)
    width 4.5rem
    height @width

  @media (min-width: Breakpoints.LG)
    width 5rem
    height @width

.cs-matchup-score
  position relative
  height 7.5rem

.cs-matchup-name
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

.cs-matchup-label
  background-color: Colors.TRUE_BLUE
  display inline-block
  color white
  border-radius 2px
  font-size 0.75rem
  text-transform uppercase
  padding-top 0.25rem
  padding-bottom 0.25rem
  padding-right 0.25rem
  padding-left 0.5rem
  position relative
  left -4rem
  top 50%
  transform translateY(-275%)

.cs-matchup-tag
  margin-right 0.375rem
  padding-top 0.25rem
  padding-bottom 0.25rem
  transform translateY(-2px)
  font-size 0.75rem
  font-weight 500
  text-transform uppercase
