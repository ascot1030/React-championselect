suggestionSize = 2rem
suggestionPadding = 0.5rem

.cs-typeahead
  .list-group
    // TODO: cleanup hard-coded value
    // flush top of suggestions with search input
    position absolute
    top calc(2.25rem + 1px)
    z-index 999

    // add scrolling after 5 suggestions

    // (suggestion height + vertical padding) * 5 + border thickness
    max-height calc(15rem + 1px)
    overflow-y scroll

  .list-group-item
    padding suggestionPadding

  .media-object
    width suggestionSize
    height @width

    // TODO: cleanup hard-coded value
    background-size 20rem

  .media
    margin-top 0

  // avoid double vertical borders
  .media:not(:last-child)
    border-bottom none

  .media-heading
    // pixel adjustment
    position relative
    top -1px

    // vertically center
    height suggestionSize
    margin-bottom 0
    line-height suggestionSize
