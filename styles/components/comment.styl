@import '../base/constants'

.cs-comment-sm
  margin-bottom 0.5rem
  padding-top 1rem
  padding-bottom 1rem
  padding-right 1rem
  background-color: Colors.BLACK_HAZE

  .cs-comment-icon
    width 1.75rem
    height @width

  .cs-comment-metadata
    font-size 0.75rem

  .cs-comment-text
    font-size 0.875rem

  .cs-comment-score
    width 3rem
    margin-top -0.5rem
    font-size 1rem
    text-align center

  .cs-comment-content
    padding-left 3rem

.cs-comment-lg
  margin-bottom 0.5rem
  padding-top 1.5rem
  padding-bottom 1.5rem
  padding-right 1.5rem
  background-color: Colors.BLACK_HAZE

.cs-comment hr
  margin-top 0.5rem

.cs-comment-score
  float left
  width 4rem
  margin-top -0.5rem
  font-size 1rem
  text-align center

.cs-comment-vote
  color: lighten(Colors.VULCAN, 25%)

.cs-comment-vote-non-active
  cursor pointer

  &:hover
    color: darken(Colors.VULCAN, 25%)

.cs-comment-vote-active
  color: darken(Colors.VULCAN, 75%) !important

.cs-comment-upvote
  margin-bottom -0.25rem

.cs-comment-downvote
  margin-top -0.25rem

.cs-comment-total
  margin-bottom 0
  font-weight bold
  color: lighten(Colors.VULCAN, 5%)

.cs-comment-content
  padding-left 4rem

.cs-comment-icons
  margin-right 0.5rem
  margin-bottom 0.5rem

.cs-comment-icon
  width 1.75rem
  height @width
  border-radius 50%

  @media (min-width: Breakpoints.LG)
    width 2rem
    height @width

.cs-comment-title
  margin-bottom 0.5rem

  // TODO: create mixin
  overflow-wrap break-word
  word-break break-all

  // for Webkit
  word-break break-word

.cs-comment-metadata
  color: Colors.MONSOON
  font-size 0.75rem
  margin-bottom 0.5rem

.cs-comment-text
  margin-bottom 0.25rem
  font-size 0.875rem
  overflow-wrap break-word
  word-break break-all

  // for Webkit
  word-break break-word

  @media (min-width: Breakpoints.LG)
    font-size 1rem

.cs-muted-link
  color: Colors.MONSOON

  &:hover
    color: darken(Colors.MONSOON, 25%)

.cs-comment-reply
  margin-top 0.625rem
  margin-left -1px

.cs-comment-children
  margin-top 1.5rem
  margin-left calc(-2rem - 1px)
  border-left: 1px dotted Colors.ZIRCON

.cs-comment-child
  &:not(:last-child)
    margin-bottom 1.5rem

  .cs-comment-metadata
    margin-bottom 0.25rem

  .cs-comment-author
    margin-right 0.5rem

  .cs-comment-upvote
    margin-bottom -0.375rem

  .cs-comment-downvote
    margin-top -0.375rem
