@import '../base/constants'

.cs-counter-tips-list
  margin-bottom 0

.cs-counter-tip
  margin-bottom 0.5rem
  padding-top 0.75rem
  padding-bottom 0.5rem

  &:not(:last-child)
    border-bottom: 1px solid darken(Colors.BLACK_HAZE, 5%)

  hr
    margin-top 0.5rem
    margin-bottom 0.5rem

.cs-counter-tip-icon
  width 1.75rem
  height @width
  border-radius 50%

.cs-counter-tip-text
  margin-bottom 0.5rem
  font-size 0.875rem
  overflow-wrap break-word
  word-break break-all

  // for Webkit
  word-break break-word

.cs-counter-tip-footer
  margin-bottom 0.5rem
  font-size 0.75rem
  color: lighten(Colors.MONSOON, 10%)

.cs-counter-tip-metadata
  float left

.cs-counter-tip-score
  float right

.cs-counter-tip-count
  color: Colors.TRUE_BLUE

.cs-counter-tip-caret
  padding 0.25rem
  font-size 0.875rem
  color: Colors.MONSOON

.cs-counter-tip-caret-non-active
  cursor pointer

  &:hover
    color: darken(Colors.VULCAN, 25%)

.cs-counter-tip-caret-active
  color: darken(Colors.VULCAN, 75%) !important

.cs-counter-tip-score-alt
  float left
  width 4rem
  margin-top -0.5rem
  font-size 1rem
  text-align center

.cs-counter-tip-vote-alt
  color: lighten(Colors.VULCAN, 25%)

.cs-counter-tip-vote-non-active-alt
  cursor pointer

  &:hover
    color: darken(Colors.VULCAN, 25%)

.cs-counter-tip-vote-active-alt
  color: darken(Colors.VULCAN, 75%) !important

.cs-counter-tip-upvote-alt
  margin-bottom -0.25rem

.cs-counter-tip-downvote-alt
  margin-top -0.25rem

.cs-counter-tip-total-alt
  margin-bottom 0
  font-weight bold
  color: lighten(Colors.VULCAN, 5%)

.cs-counter-tip-content
  padding-left 4rem
